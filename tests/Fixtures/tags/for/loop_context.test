--TEST--
"for" tag adds a loop variable to the context
--TEMPLATE--
{% for item in items %}
  * {{ loop.index }}/{{ loop.index0 }}
  * {{ loop.revindex }}/{{ loop.revindex0 }}
  * {{ loop.first ? 'FIRST' : '-' }}/{{ loop.last ? 'LAST' : '-' }}/{{ loop.length }}

{% endfor %}
--DATA--
return ['items' => ['a', 'b', 'c']]
--EXPECT--
  * 1/0
  * 3/2
  * FIRST/-/3

  * 2/1
  * 2/1
  * -/-/3

  * 3/2
  * 1/0
  * -/LAST/3
